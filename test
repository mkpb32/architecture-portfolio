  <!-- GSAP Animations -->
  <script>
    // Hero fade-in
    gsap.to("#hero-title", { duration: 2, opacity: 1, y: -30, ease: "power2.out" });

    // Project cards fade-in on scroll
    gsap.utils.toArray(".project-card").forEach((card, i) => {
      gsap.to(card, {
        scrollTrigger: {
          trigger: card,
          start: "top 80%",
        },
        duration: 1,
        opacity: 1,
        y: -20,
        delay: i * 0.2,
        ease: "power2.out"
      });
    });
  </script>
